<odoo>
    <!-- List View -->
    <record id="owner_view_list" model="ir.ui.view">
        <field name="name">owner list</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="property_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">owner form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Info">
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="property_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">Owner</field>
        <field name="res_model">owner</field>
        <field name="view_mode">list,form</field> <!-- Add view_mode field -->
    </record>

    <!-- Menu Item -->
    <menuitem
            id="owner_menu_item"
            name="Owners"
            parent="configrations_menu"
            action="owner_action"
    />
</odoo>
