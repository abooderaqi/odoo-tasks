<odoo>
    <!-- List View -->
    <record id="tag_view_list" model="ir.ui.view">
        <field name="name">tag list</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="tag_view_form" model="ir.ui.view">
        <field name="name">tag form</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">Tag</field>
        <field name="res_model">tag</field>
        <field name="view_mode">list,form</field> <!-- Add view_mode field -->
    </record>

    <!-- Menu Item -->
    <menuitem
            id="tag_menu_item"
            name="Tags"
            parent="configrations_menu"
            action="tag_action"
    />
</odoo>
