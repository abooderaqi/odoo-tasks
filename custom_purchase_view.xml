<odoo>
    <data>
        <record id="app_one_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">app_one.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group" position="inside">
                    <field name="purchase_purpose"/>
                </xpath>
                <xpath expr="//button[@name='action_rfq_send']" position="before">
                    <button name="action_draft" type="object" class="btn-primary" string="Draft"
                            invisible="state == 'draft'"/>
                    <button name="action_manager_approve" type="object" class="btn-primary" string="Manger Approve"
                            invisible="state != 'draft'" groups="app_one.purchase_manager_group"/>
                    <button name="action_finance_approve" type="object" class="btn-primary" string="Finance Approve"
                            invisible="state != 'manager_approval'" groups="app_one.purchase_finance_group"/>
                    <button name="action_approved" type="object" class="btn-primary" string="Approved"
                            invisible="state == 'approved'"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="inside">
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,manager_approval,finance_approval,approved"/>
                </xpath>
            </field>
        </record>

        <record id="view_purchase_order_list_inherit" model="ir.ui.view">
            <field name="name">purchase.order.list.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list/field[@name='partner_id']" position="after">
                    <field name="purchase_purpose"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
